<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        cardCornerRadius="5dp"
        cardElevation="5dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/trail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/trail_mod"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/trail_mod"
                android:text="@string/placeholder"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/trail_name"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/btn_remove"
                android:layout_toStartOf="@+id/btn_remove"
                android:src="@drawable/editor_icon" />

            <ImageButton
                android:id="@+id/btn_remove"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:src="@drawable/delete_icon" />

            <TextView
                android:id="@+id/trail_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/trail_name"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="trail module"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/trail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/trail_mod"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="trail date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>