<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ft08.trailblazelearn.activities.ChooseContributedItemActivity">

    <EditText
        android:id="@+id/editTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/outline_input"
        android:ems="10"
        android:hint="add title..."
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/returnButton"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="171dp"
        android:onClick="buttonAttachImageClick"
        android:text="IMAGES" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="23dp"
        android:onClick="buttonUploadClick"
        android:text="UPLOAD IMAGE" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="returnHome"
        android:text="Return to list" />

    <EditText
        android:id="@+id/editBodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/outline_input"
        android:ems="10"
        android:hint="add description..."
        android:inputType="textMultiLine"
        android:padding="10dp"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/audioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/selectButton"
        android:layout_centerHorizontal="true"
        android:text="RECORD AUDIO" />

    <Button
        android:id="@+id/pdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTitleText"
        android:layout_alignEnd="@+id/editTitleText"
        android:layout_marginRight="11dp"
        android:text="PDF" />

    <Button
        android:id="@+id/uploadPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pdfButton"
        android:layout_alignTop="@+id/uploadButton"
        android:text="UPLOAD PDF"
        />



</RelativeLayout>




