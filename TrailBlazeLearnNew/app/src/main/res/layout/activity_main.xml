<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LoginUsing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/trailBlazeImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/trailblazebg" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trailBlazeImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="LogIn Using"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/facebookBtn"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="44dp"
        android:layout_marginTop="88dp"
        android:background="@null"
        android:src="@drawable/iconfacebook" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/GoogleBtn"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />

    <ImageButton
        android:id="@+id/GoogleBtn"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/facebookBtn"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@null"
        android:src="@drawable/icongoogle" />


</RelativeLayout>

