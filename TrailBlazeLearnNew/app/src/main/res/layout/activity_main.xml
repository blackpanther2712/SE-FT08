<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_port_hdpi_screen">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_horizontal_mid"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Log In Using"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tv_horizontal_mid"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_bottom"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/facebookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@null"
            android:src="@drawable/iconfacebook" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <ImageButton
            android:id="@+id/GoogleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@null"
            android:src="@drawable/icongoogle" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent" />

</RelativeLayout>