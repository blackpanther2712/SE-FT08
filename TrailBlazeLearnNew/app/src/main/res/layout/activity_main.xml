<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LoginUsing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/trailBlazeImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/trailblazebg" android:contentDescription="@string/todo" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facebookBtn"
        android:layout_centerHorizontal="true"
        android:text="@string/login_using"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/facebookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/textView2"
        android:background="@null"
        android:contentDescription="@string/todo"
        android:src="@drawable/iconfacebook" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/GoogleBtn"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />

    <ImageButton
        android:id="@+id/GoogleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/facebookBtn"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@null"
        android:src="@drawable/icongoogle" android:contentDescription="@string/todo" />


</RelativeLayout>

